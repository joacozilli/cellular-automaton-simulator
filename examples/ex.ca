Automaton myCA {
    States := one : white
    | two : black

    Neighborhood := (1,0) |(0,1)

    Transition {
        if cell in [one, two]
            then let x = neighbors(one) in let y = 1+3 in cell
            else nei(1)

    }

    Default := two
}

[neighbors(one), (1+3)]

If (In Self [Lit "one", Lit "two"]) (LetConv (Idx 0) (LetConv (Idx 1) Self))